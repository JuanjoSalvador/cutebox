---
import Layout from "../../layouts/redirect.astro";
---

<Layout>
    <script>
        import { api } from "../../ts/api/request";
        const id = location.href.split("?id=")[1];
        api(localStorage.getItem("instance"), `/api/v1/statuses/${id}`, true, "DELETE", {}, localStorage.getItem("token")).then(() => {
            location.href = "/timeline/home";
        });
    </script>
</Layout>