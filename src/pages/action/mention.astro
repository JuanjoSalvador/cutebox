---
import Layout from "../../layouts/redirect.astro";
---

<Layout>
    <script>
        import { api } from "../../ts/api/request";
        const id = location.href.split("?id=")[1];
        api(localStorage.getItem("instance"), `/api/v1/accounts/${id}`, true, "GET", {}, localStorage.getItem("token")).then((data) => {
            localStorage.setItem("content", `@${data.acct} `);
            location.replace("/action/post");
        });
    </script>
</Layout>